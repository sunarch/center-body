{
  "manifest_version": 2,
  "name": "Center Body",
  "short_name": "Center Body",
  "version": "2.0.0",
  "author": "András Németh",
  "homepage_url": "https://codeberg.org/sunarch/center-body",

  "description": "Center <body> with the push of a toolbar button.",

  "icons": {
    "12": "icons/center-body-12.png",
    "16": "icons/center-body-16.png",
